# Environment Variables for Lawsphere Web App

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/lawsphere?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# AI Service (use internal URL for Railway, external for local dev)
AI_SERVICE_URL="http://localhost:8000"

# File Storage
# For local development, set USE_LOCAL_STORAGE=true
# For production, configure S3/MinIO below
USE_LOCAL_STORAGE="true"

# S3 Storage (production)
S3_BUCKET="lawsphere-files"
S3_REGION="us-east-1"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_ENDPOINT=""

# Kafka (optional)
KAFKA_BROKERS="localhost:9092"

# Application
NODE_ENV="development"
