// Prisma Schema for Lawsphere
// PostgreSQL with PGVector extension

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

// ==================== USERS & AUTH ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String?   @unique
  name          String?
  passwordHash  String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  resetToken    String?
  resetTokenExp DateTime?

  // Relations
  accounts  Account[]
  sessions  AuthSession[]
  userRoles UserRole[]

  // Chat & Collaboration
  chatSessions        SessionParticipant[]
  messages            Message[]
  createdChatSessions ChatSession[]        @relation("SessionCreator")

  // Files & Notes
  files File[]
  notes Note[]

  // AI Interactions
  aiInteractions AIInteraction[]

  // Notifications
  notifications Notification[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model AuthSession {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== RBAC ====================

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())

  // Relations
  permissions RolePermission[]
  users       UserRole[]
}

model Permission {
  id          String  @id @default(cuid())
  code        String  @unique
  name        String
  description String?

  // Relations
  roles RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model UserRole {
  userId     String
  roleId     String
  assignedAt DateTime  @default(now())
  expiresAt  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

// ==================== CHAT SESSIONS ====================

model ChatSession {
  id          String   @id @default(cuid())
  name        String
  description String?
  isPrivate   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Creator
  createdById String
  createdBy   User   @relation("SessionCreator", fields: [createdById], references: [id])

  // Relations
  participants  SessionParticipant[]
  messages      Message[]
  files         File[]
  notes         Note[]
  KnowledgeNode KnowledgeNode[]

  @@index([createdById])
}

model SessionParticipant {
  sessionId String
  userId    String
  joinedAt  DateTime @default(now())
  role      String   @default("member") // owner, admin, member, viewer
  isOnline  Boolean  @default(false)
  lastSeen  DateTime @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([sessionId, userId])
  @@index([userId])
}

// ==================== MESSAGES ====================

model Message {
  id        String      @id @default(cuid())
  content   String      @db.Text
  type      MessageType @default(USER)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // AI Response metadata
  aiModel      String?
  tokenCount   Int?
  responseTime Int? // in milliseconds

  // File attachments
  attachments MessageAttachment[]

  @@index([sessionId])
  @@index([userId])
  @@index([createdAt])
}

enum MessageType {
  USER
  AI
  SYSTEM
}

model MessageAttachment {
  id        String @id @default(cuid())
  messageId String
  fileId    String

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  file    File    @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

// ==================== FILES ====================

model File {
  id           String     @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  storageKey   String
  status       FileStatus @default(UPLOADING)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // File content stored in database (for Railway without persistent storage)
  content Bytes?

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sessionId String?
  session   ChatSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  // Metadata
  metadata Json?

  // OCR & Processing
  extractedText String? @db.Text
  ocrStatus     String?

  // Vector embedding for semantic search
  embedding Unsupported("vector(1536)")?

  // Relations
  attachments MessageAttachment[]

  @@index([userId])
  @@index([sessionId])
  @@index([status])
}

enum FileStatus {
  UPLOADING
  PROCESSING
  READY
  ERROR
}

// ==================== NOTES ====================

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sessionId String?
  session   ChatSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  // Version history
  versions NoteVersion[]

  @@index([userId])
  @@index([sessionId])
}

model NoteVersion {
  id        String   @id @default(cuid())
  noteId    String
  content   String   @db.Text
  createdAt DateTime @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([noteId])
}

// ==================== AI INTERACTIONS ====================

model AIInteraction {
  id           String   @id @default(cuid())
  userId       String
  model        String
  prompt       String   @db.Text
  response     String   @db.Text
  inputTokens  Int
  outputTokens Int
  cost         Float?
  latency      Int // in milliseconds
  createdAt    DateTime @default(now())

  // Trace ID for LangSmith
  traceId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([model])
  @@index([createdAt])
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
}

// ==================== CHAT ANALYTICS ====================

model ChatAnalytics {
  id        String  @id @default(cuid())
  userId    String? // null for anonymous users
  sessionId String?

  // Message details
  messageId String?
  role      String // user or assistant

  // Model & Routing
  model            String
  modelProvider    String // openai, anthropic, groq, ollama, etc.
  isLocal          Boolean @default(false)
  sensitivityLevel String? // public, internal, confidential, restricted
  piiDetected      Boolean @default(false)

  // Token usage
  inputTokens  Int @default(0)
  outputTokens Int @default(0)

  // Cost tracking (in USD)
  actualCost Float @default(0)
  cloudCost  Float @default(0) // What it would have cost on cloud
  costSaved  Float @default(0) // cloudCost - actualCost

  // Performance
  latencyMs     Int   @default(0)
  routingTimeMs Float @default(0)

  // Audit
  auditId String?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
  @@index([model])
  @@index([modelProvider])
  @@index([createdAt])
}

// ==================== AUDIT LOGS ====================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  entity    String
  entityId  String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
}

// ==================== KNOWLEDGE GRAPH ====================

model KnowledgeNode {
  id          String   @id @default(cuid())
  sessionId   String?
  type        NodeType
  label       String
  description String?  @db.Text
  properties  Json? // Additional metadata like IPC section details, dates, etc.
  position    Json? // {x, y} for graph visualization
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Source tracking - where was this entity extracted from?
  sourceType String? // message, note, file
  sourceId   String? // ID of the source

  // Relations
  session       ChatSession?    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  outgoingEdges KnowledgeEdge[] @relation("SourceNode")
  incomingEdges KnowledgeEdge[] @relation("TargetNode")

  @@index([sessionId])
  @@index([type])
  @@index([label])
}

enum NodeType {
  PERSON // Defendant, plaintiff, witness, lawyer, judge
  ORGANIZATION // Court, company, government body
  LAW_REFERENCE // IPC sections, Acts, case citations
  DATE // Important dates in the case
  LOCATION // Places mentioned
  CLAIM // Key claims or allegations
  EVIDENCE // Evidence items
  EVENT // Key events in the timeline
  DOCUMENT // Referenced documents
  CONCEPT // Legal concepts, terms
}

model KnowledgeEdge {
  id         String   @id @default(cuid())
  sourceId   String
  targetId   String
  relation   String // filed_against, represented_by, cited_in, related_to, etc.
  label      String? // Display label for the edge
  weight     Float    @default(1.0)
  properties Json? // Additional edge metadata
  createdAt  DateTime @default(now())

  // Relations
  source KnowledgeNode @relation("SourceNode", fields: [sourceId], references: [id], onDelete: Cascade)
  target KnowledgeNode @relation("TargetNode", fields: [targetId], references: [id], onDelete: Cascade)

  @@index([sourceId])
  @@index([targetId])
  @@index([relation])
}

// Store the full knowledge graph snapshot for a session
model KnowledgeGraph {
  id          String      @id @default(cuid())
  sessionId   String      @unique
  name        String?
  status      GraphStatus @default(PENDING)
  summary     String?     @db.Text // AI-generated summary of the case
  lastBuiltAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Graph statistics
  nodeCount Int @default(0)
  edgeCount Int @default(0)

  @@index([sessionId])
  @@index([status])
}

enum GraphStatus {
  PENDING
  BUILDING
  READY
  ERROR
}

// ==================== KNOWLEDGE GRAPH LEARNING ====================

model KnowledgeFeedback {
  id             String       @id @default(cuid())
  sessionId      String
  nodeId         String?
  edgeId         String?
  feedbackType   FeedbackType
  originalValue  Json?        // What model predicted
  correctedValue Json?        // What user corrected to
  rating         Int?         // 1-5 stars
  comment        String?      @db.Text
  userId         String
  createdAt      DateTime     @default(now())

  @@index([sessionId])
  @@index([userId])
  @@index([feedbackType])
  @@index([createdAt])
}

enum FeedbackType {
  ACCEPT
  REJECT
  EDIT
  RATE
  REGENERATE
  DELETE_NODE
  DELETE_EDGE
  ADD_NODE
  ADD_EDGE
  MERGE_NODES
}

model ModelMetrics {
  id                String   @id @default(cuid())
  date              DateTime @default(now()) @db.Date

  // Overall accuracy
  overallAccuracy   Float    @default(0)

  // Accuracy by entity type
  personAccuracy    Float    @default(0)
  orgAccuracy       Float    @default(0)
  lawRefAccuracy    Float    @default(0)
  dateAccuracy      Float    @default(0)
  locationAccuracy  Float    @default(0)
  claimAccuracy     Float    @default(0)
  evidenceAccuracy  Float    @default(0)
  eventAccuracy     Float    @default(0)

  // Volume metrics
  totalExtractions  Int      @default(0)
  totalFeedback     Int      @default(0)
  acceptCount       Int      @default(0)
  rejectCount       Int      @default(0)
  editCount         Int      @default(0)

  // Rates
  acceptRate        Float    @default(0)
  rejectRate        Float    @default(0)
  editRate          Float    @default(0)

  // Learning metrics
  trainingSamples   Int      @default(0)
  modelVersion      String   @default("v1.0")

  // Common errors (JSON array of {error, count, example})
  commonErrors      Json?

  @@unique([date])
  @@index([date])
}

model LearningInsight {
  id          String   @id @default(cuid())
  type        String   // pattern, error, suggestion, anomaly
  title       String
  description String   @db.Text
  severity    String   @default("info") // info, warning, critical
  actionable  Boolean  @default(true)
  resolved    Boolean  @default(false)
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([type])
  @@index([resolved])
  @@index([createdAt])
}

// ==================== LEGAL RESOURCES ====================

model LegalResource {
  id           String   @id @default(cuid())
  type         ResourceType
  title        String
  citation     String?  @unique // e.g., "IPC 420", "AIR 2020 SC 1234"
  content      String?  @db.Text
  summary      String?  @db.Text
  sourceUrl    String?
  sourceName   String?  // "Indian Kanoon", "India Code", "SCC Online"
  jurisdiction String?  // "India", "Delhi HC", "Supreme Court"
  year         Int?
  metadata     Json?
  
  // Vector embedding for semantic search
  embedding    Unsupported("vector(1536)")?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  linkedNodes  NodeResource[]

  @@index([type])
  @@index([citation])
  @@index([sourceName])
  @@index([jurisdiction])
  @@index([year])
}

enum ResourceType {
  CASE_LAW         // Court judgments
  STATUTE          // Acts, Sections
  BARE_ACT         // Full act text
  LEGAL_ARTICLE    // Commentary, analysis
  FORM_TEMPLATE    // Legal document templates
  LAW_COMMISSION   // Law Commission reports
  NOTIFICATION     // Government notifications
  CIRCULAR         // Official circulars
}

model NodeResource {
  nodeId       String
  resourceId   String
  relevance    Float    @default(1.0)
  addedBy      String?  // user ID or "system"
  createdAt    DateTime @default(now())

  resource     LegalResource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@id([nodeId, resourceId])
  @@index([nodeId])
  @@index([resourceId])
}

// ==================== CASE SIMILARITY ====================

model CaseEmbedding {
  id          String   @id @default(cuid())
  sessionId   String   @unique
  embedding   Unsupported("vector(1536)")
  summary     String?  @db.Text
  entities    Json?    // Extracted entity summary
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sessionId])
}

model SimilarCase {
  id             String   @id @default(cuid())
  sessionId      String   // The session we're finding similar cases for
  similarTo      String   // Citation or session ID of similar case
  similarityScore Float
  matchedEntities Json?   // Which entities matched
  source         String   // "internal", "indian_kanoon", "scc_online"
  externalUrl    String?
  title          String?
  summary        String?  @db.Text
  outcome        String?  // Won, Lost, Settled, Pending
  createdAt      DateTime @default(now())

  @@index([sessionId])
  @@index([similarityScore])
  @@index([source])
}

// ==================== ECOURTS INTEGRATION ====================

model CaseTracking {
  id            String   @id @default(cuid())
  sessionId     String?
  cnrNumber     String   @unique // 16-digit CNR
  caseNumber    String?
  caseType      String?
  courtName     String?
  courtCode     String?
  state         String?
  district      String?
  petitioner    String?
  respondent    String?
  filingDate    DateTime?
  registrationDate DateTime?
  status        String?  // Pending, Disposed, Transferred
  stage         String?  // Current stage of case
  nextHearing   DateTime?
  judge         String?
  acts          String[] // Acts involved
  sections      String[] // Sections involved
  lastUpdated   DateTime @default(now())
  rawData       Json?    // Full API response

  // History of updates
  history       CaseHistory[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([sessionId])
  @@index([cnrNumber])
  @@index([status])
  @@index([nextHearing])
}

model CaseHistory {
  id           String   @id @default(cuid())
  caseId       String
  hearingDate  DateTime?
  purpose      String?
  judge        String?
  result       String?
  nextHearing  DateTime?
  orderUrl     String?
  createdAt    DateTime @default(now())

  case         CaseTracking @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId])
  @@index([hearingDate])
}

// ==================== SMART SUGGESTIONS ====================

model LegalSuggestion {
  id           String   @id @default(cuid())
  sessionId    String
  type         SuggestionType
  title        String
  description  String?  @db.Text
  confidence   Float    @default(0.5)
  relevance    Float    @default(0.5)
  metadata     Json?    // Type-specific data (section details, template URL, etc.)
  dismissed    Boolean  @default(false)
  applied      Boolean  @default(false)
  userId       String?  // Who dismissed/applied
  createdAt    DateTime @default(now())

  @@index([sessionId])
  @@index([type])
  @@index([dismissed])
  @@index([createdAt])
}

enum SuggestionType {
  RELEVANT_SECTION    // Suggested legal sections
  CASE_PRECEDENT      // Similar case law
  DOCUMENT_TEMPLATE   // Suggested templates
  ARGUMENT_POINT      // Suggested arguments
  TIMELINE_EVENT      // Missing timeline events
  ENTITY_MISSING      // Suggested entities to add
  RISK_WARNING        // Potential legal risks
  DEADLINE_REMINDER   // Important deadlines
}

// ==================== COLLABORATION ====================

model GraphShare {
  id           String   @id @default(cuid())
  sessionId    String
  sharedById   String
  sharedWithId String?  // null = public link
  accessLevel  ShareAccess @default(VIEW)
  shareToken   String?  @unique // For public links
  expiresAt    DateTime?
  createdAt    DateTime @default(now())

  @@index([sessionId])
  @@index([sharedById])
  @@index([sharedWithId])
  @@index([shareToken])
}

enum ShareAccess {
  VIEW
  COMMENT
  EDIT
  ADMIN
}

model GraphComment {
  id           String   @id @default(cuid())
  sessionId    String
  nodeId       String?  // Comment on specific node
  edgeId       String?  // Comment on specific edge
  content      String   @db.Text
  userId       String
  parentId     String?  // For threaded replies
  resolved     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Self-referential for replies
  parent       GraphComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies      GraphComment[] @relation("CommentReplies")

  @@index([sessionId])
  @@index([nodeId])
  @@index([userId])
  @@index([parentId])
}

// ==================== TIMELINE EVENTS ====================

model TimelineEvent {
  id          String    @id @default(cuid())
  sessionId   String
  nodeId      String?   // Link to knowledge node
  date        DateTime
  title       String
  description String?   @db.Text
  eventType   String    // contract_signed, notice_sent, case_filed, hearing, judgment
  importance  Int       @default(1) // 1-5
  metadata    Json?
  createdAt   DateTime  @default(now())

  @@index([sessionId])
  @@index([date])
  @@index([eventType])
}
