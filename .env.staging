# Environment Variables - Staging
NODE_ENV=production

# Database (provided by Railway)
DATABASE_URL=postgresql://user:password@host:5432/db

# Redis
REDIS_PASSWORD=change-me-in-railway

# Frontend
NEXTAUTH_URL=https://lawsphere-staging.railway.app
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# AI Service
AI_SERVICE_URL=https://ai-service-staging.railway.app/api

# OAuth (Get from provider consoles)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# LLM APIs (set in Railway dashboard)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
GROQ_API_KEY=  # Get free at console.groq.com/keys

# ============ Open Source Models (Groq - FREE) ============
# Get free API key: https://console.groq.com/keys
# Use this for cost-effective production deployment
OPENSOURCE_PROVIDER=groq
OPENSOURCE_MODEL=llama-3.1-8b-instant
DEFAULT_MODEL=llama-3.1-8b-instant

# ============ Local LLM Configuration (Ollama) ============
# Staging uses local Ollama for cost-effective testing
# Perfect for QA and team testing before production
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2

# LangSmith
LANGSMITH_API_KEY=
LANGCHAIN_TRACING_V2=true
LANGSMITH_PROJECT=lawsphere-staging

# Logging
LOG_LEVEL=info
