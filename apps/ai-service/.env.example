# Environment Variables for Lawsphere AI Service

# Application
APP_NAME=lawsphere-ai-service
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lawsphere

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# S3 Storage
S3_BUCKET=lawsphere-files
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# OpenAI (optional - paid)
OPENAI_API_KEY=

# Anthropic (optional - paid)
ANTHROPIC_API_KEY=

# Google AI (optional)
GOOGLE_API_KEY=

# Groq (RECOMMENDED - FREE tier available at groq.com)
# Hosts: Llama 3.1, Llama 3.3, Mixtral, Gemma2
GROQ_API_KEY=

# Open-source model configuration
OPENSOURCE_PROVIDER=groq
OPENSOURCE_MODEL=llama-3.1-8b-instant
DEFAULT_MODEL=llama-3.1-8b-instant

# Local LLM (Ollama) - for local development only
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5

# LangSmith (optional - for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=lawsphere

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
